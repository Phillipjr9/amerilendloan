# Database Configuration
DATABASE_URL=mysql://user:password@localhost:3306/amerilend

# Application Settings
VITE_APP_ID=amerilend
VITE_APP_TITLE=AmeriLend
VITE_APP_LOGO=/logo.jpg
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# OAuth Configuration
OAUTH_SERVER_URL=https://auth.yourdomain.com
VITE_OAUTH_PORTAL_URL=https://auth.yourdomain.com
OWNER_OPEN_ID=your-admin-open-id

# Storage Configuration (Manus Built-in Forge)
BUILT_IN_FORGE_API_URL=https://api.forge.yourdomain.com
BUILT_IN_FORGE_API_KEY=your-forge-api-key

# Authorize.Net Payment Configuration
# Get these from https://account.authorize.net/
AUTHORIZENET_API_LOGIN_ID=your_api_login_id
AUTHORIZENET_TRANSACTION_KEY=your_transaction_key
AUTHORIZENET_CLIENT_KEY=your_public_client_key
AUTHORIZENET_ENVIRONMENT=sandbox  # Options: sandbox, production

# Cryptocurrency Payment Configuration
# Get these from https://commerce.coinbase.com/
COINBASE_COMMERCE_API_KEY=your_coinbase_api_key
COINBASE_COMMERCE_WEBHOOK_SECRET=your_webhook_secret
CRYPTO_PAYMENT_ENVIRONMENT=sandbox  # Options: sandbox, production

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@amerilend.com

# Application Environment
NODE_ENV=development  # Options: development, production
PORT=5000
